{
  "schema_version": "2.0",
  "template_type": "enhanced_goal_template",
  "metadata": {
    "description": "Enhanced goal template schema for milestone 2",
    "target_improvements": {
      "ai_understanding": "80%",
      "clarification_reduction": "70%",
      "goal_achievement": "60%",
      "user_satisfaction": "90%"
    },
    "structured_criteria_adoption_target": "90%"
  },
  "field_definitions": {
    "core_goal_information": {
      "goal_statement": {
        "type": "string",
        "required": true,
        "format": "Enable [user_type] to [specific_action] resulting in [measurable_benefit]",
        "ai_guidance": "Extract user, action, and benefit from user input. Make outcome-focused, not implementation-focused.",
        "validation": {
          "min_length": 50,
          "max_length": 200,
          "required_elements": ["user_type", "action", "benefit"]
        }
      },
      "problem_context": {
        "type": "string",
        "required": true,
        "ai_guidance": "Identify the specific problem being solved and why it matters now. Focus on current pain points.",
        "validation": {
          "min_length": 30,
          "max_length": 150
        }
      },
      "success_outcome": {
        "type": "string",
        "required": true,
        "ai_guidance": "Describe the end state when goal is achieved. Focus on outcomes, not process.",
        "validation": {
          "min_length": 30,
          "max_length": 150
        }
      }
    },
    "success_criteria_framework": {
      "primary_criteria": {
        "type": "array",
        "required": true,
        "min_items": 2,
        "max_items": 3,
        "item_structure": {
          "criterion": {
            "type": "string",
            "required": true,
            "validation": {
              "min_length": 20,
              "max_length": 100
            }
          },
          "target": {
            "type": "string",
            "required": true,
            "format": "[Quantified_target] within [timeframe]",
            "validation": {
              "must_include_number": true,
              "must_include_timeframe": true
            }
          },
          "measurement_method": {
            "type": "string",
            "required": true,
            "ai_guidance": "Specify data source and measurement frequency"
          },
          "validation": {
            "type": "string",
            "required": true,
            "ai_guidance": "Define how to confirm this criterion is met"
          }
        }
      },
      "secondary_criteria": {
        "type": "array",
        "required": false,
        "max_items": 2,
        "item_structure": {
          "enhancement": {
            "type": "string",
            "required": true
          },
          "target": {
            "type": "string",
            "required": true
          },
          "measurement_method": {
            "type": "string",
            "required": true
          }
        }
      }
    },
    "stakeholder_impact_analysis": {
      "primary_users": {
        "type": "array",
        "required": true,
        "min_items": 1,
        "max_items": 3,
        "item_structure": {
          "user_type": {
            "type": "string",
            "required": true
          },
          "current_pain_point": {
            "type": "string",
            "required": true
          },
          "goal_benefit": {
            "type": "string",
            "required": true
          },
          "success_impact": {
            "type": "string",
            "required": true,
            "validation": {
              "must_be_measurable": true
            }
          }
        }
      },
      "key_stakeholders": {
        "type": "array",
        "required": true,
        "min_items": 1,
        "max_items": 3,
        "item_structure": {
          "stakeholder": {
            "type": "string",
            "required": true
          },
          "interest": {
            "type": "string",
            "required": true
          },
          "influence": {
            "type": "string",
            "required": true
          },
          "success_criteria": {
            "type": "string",
            "required": true
          }
        }
      }
    },
    "hypothesis_framework": {
      "core_hypotheses": {
        "type": "array",
        "required": true,
        "min_items": 1,
        "max_items": 2,
        "item_structure": {
          "hypothesis": {
            "type": "string",
            "required": true,
            "format": "If [condition], then [expected_outcome]",
            "validation": {
              "must_include_cause_effect": true
            }
          },
          "why_critical": {
            "type": "string",
            "required": true
          },
          "validation_approach": {
            "type": "string",
            "required": true
          },
          "success_threshold": {
            "type": "string",
            "required": true,
            "validation": {
              "must_be_measurable": true
            }
          }
        }
      },
      "supporting_assumptions": {
        "type": "array",
        "required": false,
        "max_items": 3,
        "item_structure": {
          "assumption": {
            "type": "string",
            "required": true
          },
          "impact_if_wrong": {
            "type": "string",
            "required": true
          },
          "validation_method": {
            "type": "string",
            "required": true
          }
        }
      }
    },
    "dependency_structure": {
      "prerequisites": {
        "type": "array",
        "required": false,
        "item_structure": {
          "dependency": {
            "type": "string",
            "required": true
          },
          "source": {
            "type": "string",
            "required": true
          },
          "timeline": {
            "type": "string",
            "required": true
          },
          "risk_if_missing": {
            "type": "string",
            "required": true
          }
        }
      },
      "enables_goals": {
        "type": "array",
        "required": false,
        "item_structure": {
          "enabled_goal": {
            "type": "string",
            "required": true
          },
          "specific_benefit": {
            "type": "string",
            "required": true
          },
          "timeline_impact": {
            "type": "string",
            "required": true
          }
        }
      }
    },
    "milestone_structure": {
      "milestones": {
        "type": "array",
        "required": true,
        "min_items": 3,
        "max_items": 5,
        "item_structure": {
          "title": {
            "type": "string",
            "required": true
          },
          "priority": {
            "type": "string",
            "required": true,
            "enum": ["P1", "P2", "P3"]
          },
          "focus": {
            "type": "string",
            "required": true
          },
          "success_indicators": {
            "type": "array",
            "required": true,
            "min_items": 1,
            "max_items": 3
          },
          "hypothesis_validation": {
            "tests": {
              "type": "string",
              "required": true
            },
            "validation_method": {
              "type": "string",
              "required": true
            }
          },
          "value_delivered": {
            "user_value": {
              "type": "string",
              "required": true
            },
            "learning_value": {
              "type": "string",
              "required": true
            }
          },
          "effort_estimate": {
            "type": "string",
            "required": true
          },
          "timeline": {
            "type": "string",
            "required": true
          },
          "dependencies": {
            "type": "string",
            "required": false
          }
        }
      }
    },
    "validation_framework": {
      "measurement_strategy": {
        "data_sources": {
          "type": "string",
          "required": true
        },
        "measurement_frequency": {
          "type": "string",
          "required": true
        },
        "progress_indicators": {
          "type": "string",
          "required": true
        }
      },
      "learning_capture_points": {
        "after_each_milestone": {
          "type": "string",
          "required": true
        },
        "monthly_reviews": {
          "type": "string",
          "required": true
        },
        "success_validation": {
          "type": "string",
          "required": true
        }
      },
      "adaptation_triggers": {
        "pivot_indicators": {
          "type": "string",
          "required": true
        },
        "acceleration_signals": {
          "type": "string",
          "required": true
        },
        "pause_conditions": {
          "type": "string",
          "required": true
        }
      }
    }
  },
  "ai_processing_guidance": {
    "progressive_disclosure": {
      "phase_1_basic": [
        "goal_statement",
        "problem_context",
        "success_outcome",
        "primary_criteria"
      ],
      "phase_2_intermediate": [
        "stakeholder_impact_analysis",
        "core_hypotheses",
        "milestone_structure"
      ],
      "phase_3_advanced": [
        "dependency_structure",
        "validation_framework",
        "risk_assessment"
      ]
    },
    "field_completion_priority": {
      "critical_path": [
        "goal_statement",
        "primary_criteria",
        "milestones"
      ],
      "important": [
        "stakeholder_impact_analysis",
        "hypotheses"
      ],
      "enhancement": [
        "secondary_criteria",
        "dependency_details"
      ]
    },
    "validation_automation": {
      "required_field_check": true,
      "format_validation": true,
      "completeness_scoring": true,
      "quality_metrics": [
        "specificity_score",
        "measurability_score",
        "clarity_score"
      ]
    }
  },
  "user_experience_features": {
    "help_system": {
      "inline_guidance": true,
      "examples_provided": true,
      "validation_feedback": true,
      "progress_indicators": true
    },
    "template_validation": {
      "real_time_checking": true,
      "completion_scoring": true,
      "improvement_suggestions": true,
      "auto_save_progress": true
    },
    "feedback_mechanisms": {
      "template_usability_rating": true,
      "field_difficulty_assessment": true,
      "completion_success_tracking": true,
      "suggestion_collection": true
    }
  },
  "quality_assurance": {
    "automated_checks": [
      "required_fields_present",
      "format_compliance",
      "measurability_validation",
      "dependency_consistency",
      "hypothesis_testability"
    ],
    "manual_review_criteria": [
      "outcome_focus_verification",
      "stakeholder_alignment_check",
      "risk_assessment_completeness",
      "learning_integration_validation"
    ],
    "success_metrics": {
      "ai_understanding_improvement": 80,
      "clarification_request_reduction": 70,
      "goal_achievement_increase": 60,
      "user_satisfaction_target": 90,
      "structured_criteria_adoption": 90
    }
  }
}